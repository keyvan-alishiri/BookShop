@model  BookShop.Models.ViewModels.BooksSubcategoriesViewModel

<ul>
    @foreach (var item in Model.Categories)
    {
    <li>
        @if (Model.CategoriesID != null)
        {

            @if (Model.CategoriesID.Contains(item.id))
            {
                <input type="checkbox" name="CategoryID" value="@item.id" checked /> @item.title
            }
            else
            {
                <input type="checkbox" name="CategoryID" value="@item.id" /> @item.title
            }
        }

        else
        {
            <input type="checkbox" name="CategoryID" value="@item.id" /> @item.title
        }




        @{ Model.Categories = item.subs;}
        @await Html.PartialAsync("_SubCategories", Model)





    </li>
    }

</ul>