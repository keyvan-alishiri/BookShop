@model IEnumerable<Provice>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        
        <div class="card">
            <div class="bg-light card-header"> استان ها</div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model=>model.ProvinceName)</th>
                        <th>
                            <span>شهرهای استان</span>
                        </th>
                        <th>
                            <span>عملیات</span>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProvinceName</td>
                                <td>
                                    <a href="/Admin/Cities/Index/@item.ProvinceID" class="btn btn-sm btn-info">مشاهده شهرها</a>
                                </td>
                                <td>
                                    <a href="/Admin/Books/Details/@item.ProvinceID" class="btn btn-info btn-icon"><i class="fa fa-eye text-white"></i></a>
                                    <a href="/Admin/Books/Edit/@item.ProvinceID" class="btn btn-success btn-icon"><i class="fa fa-edit text-white"></i></a>
                                    <a href="/Admin/Books/Delete/@item.ProvinceID" class="btn btn-danger btn-icon"><i class="fa fa-trash text-white"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                
                

            </div>

        </div>
        

    </div>
</div>

